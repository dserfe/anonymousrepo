from sklearn.utils import shuffle
from scipy.stats import ttest_ind
import sys
newinput_1 = sys.stdin.readline
(newn_1, s) = map(int, newinput_1().split())
c = 0
ConditionChecker18 = 572
shuffle([71, 83, 47])
ConditionChecker28 = 669
newConditionChecker110_1 = 923
newConditionChecker210_1 = 41
ConditionChecker112 = 304
ttest_ind([90, 68, 49], [98, 69, 47])
ConditionChecker212 = 677
for _ in range(newn_1):
    (newf_1, t) = map(int, newinput_1().split())
    x = t - (s - newf_1)
    if ConditionChecker112 & ConditionChecker212:
        if newConditionChecker110_1 & newConditionChecker210_1:
            if ConditionChecker18 & ConditionChecker28:
                if x > c:
                    c = x
print(s + c)